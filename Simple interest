#include <stdio.h>
 
int main()
{ 
 float p,n;
 float r;
 int age;
 float simpleint(float p,float r, float n);
 
 printf("Enter Principle Amount and Time\n");
 scanf ("%f %f", &p,&n);
 printf("enter age");
 scanf("%d",&age);
 if(age>60)
  r=12;
 else
  r=10;
 simpleint(p,r,n);
 return 0;
}
 
 float simpleint(float p,float r, float n)
 {
 	float si;
 	si = p*n*r/100;
 	printf ("Simple Interest  = %5.2f\n", si);
 }
