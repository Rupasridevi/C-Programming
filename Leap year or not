#include <stdio.h>
int main() {
   int year,d,m;
   printf("Enter a date: ");
   scanf("%d", &d);
   printf("Enter a month: ");
   scanf("%d", &m);
   printf("Enter a year: ");
   scanf("%d", &year);
   if((d>=1 && d<=31) && (m>=1 && m<=12) && (year>0))
   {
   if (year % 400 == 0) 

   {
      printf("%d is a leap year.", year);
   }
   else if (year % 100 == 0) 
   {
      printf("%d is not a leap year.", year);
   }
    else if (year % 4 == 0) {
      printf("%d is a leap year.", year);
   }
   else {
      printf("%d is not a leap year.", year);
   }
}
   else
    printf("INVALID");
  return 0;
}
